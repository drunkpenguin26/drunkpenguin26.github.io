<!DOCTYPE html>
<html>
<head>
    <title>Percentage Calculator</title>
</head>
<body>
    <h1>Percentage Calculator</h1>
    <p>Enter two numbers to calculate the percentage:</p>
    
    <input type="text" id="numerator" placeholder="Enter numerator">
    <input type="text" id="denominator" placeholder="Enter denominator">
    
    <button onclick="calculatePercentage()">Calculate Percentage</button>
    
    <p id="result"></p>
    
    <script>
        function calculatePercentage() {
            var numerator = parseFloat(document.getElementById('numerator').value);
            var denominator = parseFloat(document.getElementById('denominator').value);
            
            if (!isNaN(numerator) && !isNaN(denominator) && denominator !== 0) {
                var percentage = (numerator / denominator) * 100;
                document.getElementById('result').innerHTML = 'Result: ' + percentage + '%';
            } else {
                document.getElementById('result').innerHTML = 'Please enter valid numbers, and the denominator should not be zero.';
            }
        }
    </script>
</body>
</html>
